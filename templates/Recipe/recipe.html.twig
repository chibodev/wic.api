{% extends "base.html.twig" %}

{% block body %}
    <br/>

    {% for message in app.session.flashBag.get('error') %}
        <div class="flash-notice alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% if (data.status == 'green') %}

        <h4>{{ data.recipe.name|e }} <small class="float-right">source: {{ data.recipe.author|e }}</small></h4>
        <hr>
        <span class="breadcrumb">Preparation: {{ data.recipe.prep|e }} min | Cooking: {{ data.recipe.cook|e }} min</span>
        <table class="table">
            <tbody>
                <tr>
                    <th>Ingredient(s)</th>
                    <td>
                    {% for item in data.recipe.ingredient %}
                        <li>{{ item.quantity }} {{ item.unit }} {{ item.description }}</li>
                    {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Direction(s)</th>
                    <td>
                        {% for item in data.recipe.direction %}
                            <li>{{ item.description }}</li>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

    {% endif %}

{% endblock body %}

